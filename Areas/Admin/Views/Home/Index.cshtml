@{
    var counter = 1;
}
@model IEnumerable<ApplicationUser>
<div class="text-center">
    <h1 class="display-4">Welcome to Admin Dashboard!</h1>
    <a class="btn btn-outline-primary mb-5" asp-controller="ProductCategory" asp-action="Index"><i class="bi bi-pencil-square"></i>Product categories </a>
    <a class="btn btn-outline-primary mb-5" asp-controller="Product" asp-action="Index"><i class="bi bi-pencil-square"></i>Products </a>
    <a class="btn btn-outline-primary mb-5"  asp-action="Orders"><i class="bi bi-pencil-square"></i>Orders </a>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">All Users</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="height: 200px;">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sequence No.</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
