@using ecommerce_website_simple.ViewModels.UserDashBoard;
@model UserDashBoardVM
<div class="text-center">
    <h1 class="display-4">Welcome to User Dashboard!</h1>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Profile Details</div>
                <div class="card-body">

                    <div class="form-group row">
                        <label for="email_address" class="col-md-4 col-form-label text-md-right">First Name:</label>
                        <div class="col-md-6">
                            <label class="col-form-label">@Model.AppUser.FirstName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email_address" class="col-md-4 col-form-label text-md-right">Last Name:</label>
                        <div class="col-md-6">
                            <label class="col-form-label">@Model.AppUser.LastName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email_address" class="col-md-4 col-form-label text-md-right">Email Address</label>
                        <div class="col-md-6">
                            <label class="col-form-label">@Model.AppUser.Email</label>
                        </div>
                    </div>



                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                   Order History
                </div>
                <div class="card-body">
                    @if (Model.Orders.Count != 0)
                    {
                        <div class="accordion" id="accExample">
                            @foreach (var Item in Model.Orders)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingOne">
                                        <button class="accordion-button" type="button" aria-expanded="true" aria-controls="collapseOne" data-bs-target="#collapseOne" data-bs-toggle="collapse">
                                            @Item.OrderID
                                        </button>
                                    </h2>
                                    <div id="collapseOne" class="accordion-collapse collaspe show" aria-labelledby="headingOne" data-bs-parent="accExample">
                                        <div class="accordion-body">
                                            <table class="table table-borderless">
                                                @foreach (var product in Item.OrderItems)
                                                {
                                                    <tr>
                                                        <th scope="row">Order ItemID</th>
                                                        <td>@product.OrderItemID</td>
                                                    </tr>


                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                        <div class="text-center">
                            <p class="p-5">Development not completed</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="p-5">You have no orders yet!!</p>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
